<%- include('./partials/header.ejs') %>
    <div class="logincontainer w-full h-[80%] flex items-center justify-center">
        <div class="loginpanel">
            <h3 class="text-2xl mb-4">Passcode Needed.</h3>
            <form autocomplete="off" action="/hisaab/<%= id%>/verify" class="flex flex-col gap-2 items-start"
                method="post">
                <input class="block px-3 py-2 border-[1px] border-zinc-100 rounded-md" type="password"
                    placeholder="passcode" name="passcode">
                <input class="block px-4 py-2 bg-blue-500 rounded-md text-white mt-3" type="submit" value="View Hisaab">
            </form>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>