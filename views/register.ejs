<%- include('./partials/header.ejs') %>
    <div class="logincontainer w-full h-[80%] flex items-center justify-center">
        <div class="loginpanel">
            <h3 class="text-2xl mb-3">Create account</h3>
            <form action="/register" class="flex flex-col gap-2 items-start" method="post">
                <input class="block px-3 py-2 border-[1px] border-zinc-100 rounded-md" type="email" placeholder="Email"
                    name="email">
                <input class="block px-3 py-2 border-[1px] border-zinc-100 rounded-md" type="text"
                    placeholder="Username" name="username">
                <input class="block px-3 py-2 border-[1px] border-zinc-100 rounded-md" type="text"
                    placeholder="Full Name" name="name">
                <input class="block px-3 py-2 border-[1px] border-zinc-100 rounded-md" type="password"
                    placeholder="password" name="password">
                <input class="block px-4 py-2 bg-blue-500 rounded-md text-white" type="submit" value="Create">
            </form>
            <a class="mt-5 inline-block text-blue-500" href="/">Have an account, login here.</a>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>