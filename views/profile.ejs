<%- include('./partials/header.ejs') %>
    <div class="w-full px-20 py-10">    
        <h1 class="text-3xl mb-4">Hey, <%= user.name %>üëãüèª </h1>
        <h3 class="opacity-50 mb-10">showing all hisaabs, till now.</h3>
        <div>
            <form class="flex mb-10 gap-5" action="/profile" method="get">
               <div class="px-4 py-2 flex items-center gap-4 font-medium text-sm text-zinc-500 bg-zinc-300 rounded-md"> 
                    Filters <i  class="ri-sound-module-fill bg-zinc-300 text-black"></i></div>
                <div id="bydate"
                    class="px-4 py-2 flex items-center gap-4 font-medium text-sm text-zinc-500 bg-zinc-300 rounded-md">
                    By Date <i class="ri-calendar-line bg-zinc-300 text-black"></i></div>
                <div class="hidden dates gap-5 items-center">
                    <input class="bg-zinc-300 text-sm px-4 py-2 rounded-md text-zinc-500 mr-3" name="startDate" type="date">
                    <input class="bg-zinc-300 text-sm px-4 py-2 rounded-md text-zinc-500" name="endDate" type="date">
                </div>
                <select class="outline-none" name="byDate" id="">
                    <option value="-1">Newest First</option>
                    <option value="1">Oldest First</option>
                </select>
                <input class="px-6 py-2 bg-blue-500 text-white rounded-md" type="submit" value="Filter">
            </form>
        </div>
            <div class="flex gap-10 flex-wrap">
             <%   if(user.hisaab.length > 0){ %>
               <%  user.hisaab.forEach(function(hisaab){ %>
                    <div class="bg-zinc-100 p-3 px-5 rounded-md">
                        <div class="flex gap-10 items-center bg-zinc-100">
                            <div class="flex justify-center gap-2 items-start bg-zinc-100">

                             <% if(hisaab.encrypted){  %>
                                    <div class="px-3 py-2 rounded-md flex gap-2 items-center bg-blue-500 text-white">
                                        <i class="text-xs ri-lock-2-line bg-blue-500"></i>
                                        <h3 class="text-sm bg-blue-500">Encrypted</h3>
                                    </div>
                            <% }else{%>
                                    <div class="px-3 py-2 rounded-md flex gap-2 items-center bg-teal-600 text-white">
                                        <i class="text-xs ri-check-line bg-teal-600"></i>
                                        <h3 class="text-sm bg-teal-600">Available</h3>
                                    </div>
                             <%}%>

                             <%   if(!hisaab.shareable){%>
                                    <div class="px-3 py-2 rounded-md bg-zinc-200 flex items-center justify-center">
                                        <i class="text-sm ri-eye-off-line bg-zinc-200 text-black"></i>
                                    </div>
                               <% }%>
                                
                            </div>
                            <h3 class="text-xs text-zinc-600 bg-zinc-100">Created on  <%= hisaab.createdAt.getDate() %> - <%=  hisaab.createdAt.getMonth() %> - <%= hisaab.createdAt.getFullYear() %></h3>
                        </div>
                        <div class="mt-3 bg-zinc-100">
                            <h3 class="font-semibold text-black text-lg bg-zinc-100">
                                <%= hisaab.title %>
                            </h3>
                            <a class="text-zinc-600 bg-zinc-100 text-sm" href="/hisaab/view/<%= hisaab._id %>">view hisaab</a>
                        </div>
                   </div> 
               <%    }) %>
             <% } else{ %>
            <p class="text-zinc-400 ">You haven't created any hisaab yet.</p>
               
             <%}%>


            </div>
        
   </div> 
    <script>
        document.querySelector("#bydate")
            .addEventListener("click", function (event) {
                if (document.querySelector(".dates").classList.contains("hidden")) {
                    document.querySelector(".dates").classList.remove("hidden");
                }
                else {
                    document.querySelector(".dates").classList.add("hidden");
                }
            })
   </script>  
    <%- include('./partials/footer.ejs') %>